%section.tracks-index
  %header.tracks-index__header
    %h1 Tracks
    = link_to 'Create track', new_track_path
  %section.tracks-index__content
    - @tracks.each do |track|
      .track
        %span.track__title= track.title
        %span.track__duration= "#{track.duration/60}:#{track.duration%60}"
        %span= link_to 'Remove', track_path(track), method: :delete
